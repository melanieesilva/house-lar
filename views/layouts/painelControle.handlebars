                    <div class="colunaPerfil">
                        <div class="infoPerfil">
                            <p>E-mail cadastrado</p>
                            <p id="emailPerfil">islaniasilva21@gmail.com</p>
                        </div>
                        <div class="infoPerfil">
                            <p>Data de cadastro</p>
                            <p id="dataCadastroPerfil">21/08/2023</p>
                        </div>
                    </div>
                </div>
    
                <div class="jornadaUsuario">
                    <div class="tituloJornada">
                        <iconify-icon icon="ant-design:node-index-outlined"></iconify-icon>
