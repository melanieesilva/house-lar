                            <p id="duvidasRecebidas">20</p>
                        </div>
                        <div class="infoJornada">
                            <p>Visitas marcadas</p>
                            <p id="visitasMarcadas">33</p>
                        </div>
                    </div>
                </div>
    
                <button class="btnEditarPerfil" id="btnEditarPerfil" onclick="AbrirEdicao()">
                    <iconify-icon icon="solar:pen-outline"></iconify-icon>
                    Editar Perfil
                </button>
            </div>
            <div class="editarPerfil" id="editarPerfil">
                <div class="retornoPerfil">
                    <a onclick="AbrirPerfil()">
                        <iconify-icon icon="ep:arrow-left"></iconify-icon>
                        Voltar
                    </a>
                </div>
                <div class="containerImgPerfil">
                    <div class="tituloImgPerfil">
                        <iconify-icon icon="iconoir:profile-circle"></iconify-icon>
                        Seu perfil
                    </div>
                    <div class="containerImagem">
                        <div class="imgPerfil">
                            <iconify-icon icon="iconoir:profile-circle"></iconify-icon>
                        </div>
                        <div class="addImagem" id="addImagem">
                            <iconify-icon icon="tabler:photo-plus"></iconify-icon>
                        </div>
                    </div>
                    </div>
                    
                <div class="formularioEdicao">
                    <form action="">
                        <div class="input">
                            <label for="nomeUsuario"> Nome e sobrenome </label>
                            <input type="text" name="nomeUsuario" id="nomeUsuario">
                        </div>
                        <div class="input">
                            <label for="emailUsuario"> E-mail </label>
                            <input type="email" name="emailUsuario" id="emailUsuario">
                        </div>
                        <div class="input">
                            <label for="telefoneUsuario"> Telefone </label>
                            <input type="text" name="telefoneUsuario" id="telefoneUsuario">
                        </div>
                        <div class="input">
                            <label for="senhaUsuario"> Senha </label>
                            <input type="password" name="senhaUsuario" id="senhaUsuario">
                        </div>
                    
                    </form>
                </div>
                <button onclick="SalvarEdicao()" class="salvarEdicao" id="salvarEdicao">
                    <iconify-icon icon="uil:save"></iconify-icon>
                    Salvar
                </button>
